# ============================================
# Document Processor Environment Configuration
# ============================================
# Copy this file to .env and update with your settings

# ============================================
# Google Cloud Document AI Configuration
# ============================================
PROJECT_ID=optical-valor-477121-d0
LOCATION=us
PROCESSOR_ID=c159d8b2fb74ffc9

# ============================================
# Folder Paths for PDF Processing
# ============================================
UPLOAD_FOLDER=H:/My Drive/AAA AI-Training/Document Processing/EOB-Extractor/eob-source
RESULTS_FOLDER=H:/My Drive/AAA AI-Training/Document Processing/EOB-Extractor/eob-results
RAW_DATA_FOLDER=H:/My Drive/AAA AI-Training/Document Processing/EOB-Extractor/eob-results/raw_data

# ============================================
# Provider Selection (IMPORTANT!)
# ============================================
# OCR_PROVIDER: "mistral" (default, cheaper) or "google" (Google Document AI)
# LLM_PROVIDER: "mistral" (default, cheaper) or "openai" (GPT-4o)
OCR_PROVIDER=mistral
LLM_PROVIDER=mistral

# ============================================
# Mistral AI Configuration (Default - Recommended)
# ============================================
# Get your API key from: https://console.mistral.ai/api-keys/
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=pixtral-large-latest

# ============================================
# LlamaCloud Configuration (Alternative OCR)
# ============================================
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here

# ============================================
# OpenAI Configuration (Alternative LLM)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=16384
OPENAI_TEMPERATURE=0

# ============================================
# Server Configuration
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
BACKEND_URL=http://127.0.0.1:3000

# ============================================
# Google Drive Configuration
# ============================================
GDRIVE_RESULTS_FOLDER_ID=140_11GaATZVV3Ez7aQE7FGJJ4DHWXVFR

# ============================================
# Cost Configuration
# ============================================
# Google Document AI
DOCAI_COST_PER_PAGE=0.015
# OpenAI GPT-4o
OPENAI_INPUT_COST_PER_1K=0.00015
OPENAI_OUTPUT_COST_PER_1K=0.0006
# Mistral Pixtral Large
MISTRAL_INPUT_COST_PER_1K=0.002
MISTRAL_OUTPUT_COST_PER_1K=0.006

# ============================================
# Processing Configuration
# ============================================
MAX_PAGES_PER_SPLIT=15
MAX_PARALLEL_WORKERS=8
DOCUMENT_AI_TIMEOUT=300000

# ============================================
# Cost Tracking (Optional)
# ============================================
# Set to NO to skip cost calculation (avoids backend API calls)
COST_TRACKING=NO

# ============================================
# Batch Processing (for large documents)
# ============================================
# Set to YES to use batch API for chunked documents (50% cost savings)
# Batch processing is async and may take longer but costs half as much
USE_BATCH_PROCESSING=YES
