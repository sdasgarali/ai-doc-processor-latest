# ============================================
# Python Processor - Production Environment
# ============================================
# Copy this file to .env and update with your settings

# ============================================
# Google Cloud Document AI Configuration
# ============================================
PROJECT_ID=your-gcp-project-id
LOCATION=us
PROCESSOR_ID=your-document-ai-processor-id

# ============================================
# Folder Paths for PDF Processing
# ============================================
UPLOAD_FOLDER=/path/to/upload/folder
RESULTS_FOLDER=/path/to/results/folder
RAW_DATA_FOLDER=/path/to/raw_data/folder

# ============================================
# Provider Selection (IMPORTANT!)
# ============================================
# OCR_PROVIDER: "mistral" (cheaper) or "google" (Google Document AI)
# LLM_PROVIDER: "mistral" (cheaper) or "openai" (GPT-4o)
OCR_PROVIDER=google
LLM_PROVIDER=openai

# ============================================
# Mistral AI Configuration
# ============================================
# Get your API key from: https://console.mistral.ai/api-keys/
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=pixtral-large-latest

# ============================================
# LlamaCloud Configuration (Alternative OCR)
# ============================================
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=16384
OPENAI_TEMPERATURE=0

# ============================================
# Server Configuration
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
BACKEND_URL=http://127.0.0.1:8000

# ============================================
# Google Drive Configuration (Optional)
# ============================================
GDRIVE_RESULTS_FOLDER_ID=your_google_drive_folder_id

# ============================================
# Cost Configuration
# ============================================
# Google Document AI
DOCAI_COST_PER_PAGE=0.015
# OpenAI GPT-4o
OPENAI_INPUT_COST_PER_1K=0.00015
OPENAI_OUTPUT_COST_PER_1K=0.0006
# Mistral Pixtral Large
MISTRAL_INPUT_COST_PER_1K=0.002
MISTRAL_OUTPUT_COST_PER_1K=0.006

# ============================================
# Processing Configuration
# ============================================
MAX_PAGES_PER_SPLIT=15
MAX_PARALLEL_WORKERS=8
DOCUMENT_AI_TIMEOUT=300000

# ============================================
# Cost Tracking (Optional)
# ============================================
COST_TRACKING=NO

# ============================================
# Batch Processing
# ============================================
USE_BATCH_PROCESSING=YES
