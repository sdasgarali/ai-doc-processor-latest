# Environment Variables Example
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# AI Provider Configuration
# ===========================================

# Default AI Provider (groq, openai, anthropic)
AI_PROVIDER=groq

# Groq (Default Provider)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# OpenAI (Alternative)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4

# Anthropic (Alternative)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ===========================================
# Local LLM (Ollama) - Air-Gapped Fallback
# ===========================================

# Local LLM URL (Ollama default)
LOCAL_LLM_URL=http://localhost:11434

# Local model name (must be pulled first: ollama pull llama3.1:70b)
LOCAL_LLM_MODEL=llama3.1:70b

# Enable automatic fallback to local LLM if primary provider fails
AI_FALLBACK_ENABLED=true

# ===========================================
# Database Configuration
# ===========================================

DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379

# ===========================================
# Application Configuration
# ===========================================

APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# Security
# ===========================================

SECRET_KEY=your_secret_key_here_change_in_production
# JWT_SECRET=your_jwt_secret_here

# ===========================================
# External Services
# ===========================================

# SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# Slack Notifications
# ===========================================

# Slack Incoming Webhook URL for self-heal notifications
# Get one at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
